<div class="bg-yellow-500 h-screen w-full flex-col flex">
    <section class="flex-1">
        <section class="text-center font-bold text-5xl pt-[5vh]">
            Text-to-Music Model
        </section>
        <section class="text-center font-normal text-2xl px-24 py-4">
            This Chatbot processes text input and generates music. It uses a
            text-to-music model to generate music based on the input text.
        </section>
    </section>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const durationElement = document.getElementById(
                "duration",
            ) as HTMLInputElement;
            const durationValueElement =
                document.getElementById("duration-value");
            if (durationElement !== null && durationValueElement !== null) {
                durationElement.addEventListener("input", function () {
                    durationValueElement.textContent = this.value;
                });
            }
        });
    </script>
    <form id="music-form" class="px-24 py-6 flex flex-col">
        <input
            id="prompt"
            class="bg-black/[0.2] rounded-3xl py-4 px-4 w-full"
            placeholder="Prompt"
        />
        <section class="flex items-center">
            <input
                id="duration"
                type="range"
                min="0"
                max="60"
                class="bg-black/[0.2] rounded-3xl py-4 px-4 w-full my-6"
                placeholder="Prompt"
            /><section id="duration-value" class="px-2"></section>s
        </section>
        <button
            type="submit"
            class="bg-black text-white rounded-3xl py-4 px-4 w-1/3 self-center"
        >
            Generate Music
        </button>

        <audio id="music-player" class="w-full my-48 " controls></audio>
    </form>
</div>
